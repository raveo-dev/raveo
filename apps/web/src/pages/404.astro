---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Page Not Found">
  <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
    <h1 class="text-8xl font-bold text-gray-200 mb-4">404</h1>
    <h2 class="text-2xl font-semibold mb-4">Page Not Found</h2>
    <p class="text-gray-500 mb-8">The page you are looking for does not exist.</p>
    <a href="/" class="px-6 py-3 bg-gray-900 text-white rounded-lg hover:bg-gray-700 transition-colors">
      Go Home
    </a>
  </div>
</Layout>