---
import Layout from '../../layouts/Layout.astro';

const { siteSettings } = Astro.locals;
const baseUrl = Astro.site?.toString().replace(/\/$/, '') ?? '';

const sortedPosts = [...Astro.locals.posts].sort((a, b) => {
  const dateA = new Date(a.publishedDate ?? '').getTime();
  const dateB = new Date(b.publishedDate ?? '').getTime();
  return dateB - dateA;
});

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Blog',
  name: `Blog â€” ${siteSettings?.siteName ?? 'Raveo'}`,
  url: `${baseUrl}/blog`,
  blogPost: sortedPosts.slice(0, 10).map(post => ({
    '@type': 'BlogPosting',
    headline: post.title,
    url: `${baseUrl}/blog/${post.slug}`,
    datePublished: post.publishedDate ?? '',
  })),
};
---

<Layout title="Blog" schema={schema}>
  <h1 class="text-4xl font-bold mb-8">Blog</h1>

  <ul class="space-y-8">
    {sortedPosts.map(post => (
      <li class="border-b border-gray-200 pb-8">
        <a href={`/blog/${post.slug}`} class="group">
          <h2 
  style={`view-transition-name: post-title-${post.slug}`}
  class="text-2xl font-semibold group-hover:text-blue-600 transition-colors"
>
  {post.title}
</h2>
          {post.excerpt && (
            <p class="text-gray-600 mt-2">{post.excerpt}</p>
          )}
          {post.publishedDate && (
            <time class="text-sm text-gray-400 mt-2 block">
              {new Date(post.publishedDate).toLocaleDateString()}
            </time>
          )}
        </a>
      </li>
    ))}
  </ul>

  {sortedPosts.length === 0 && (
    <p class="text-gray-500">No posts yet.</p>
  )}
</Layout>