---
import '../styles/global.css';

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
  
}

const { title, description, noIndex } = Astro.props;
const { navigation, siteSettings } = Astro.locals;


const siteName = siteSettings?.siteName ?? 'Raveo';
const siteDescription = description ?? siteSettings?.siteDescription ?? '';

---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteDescription} />
    <title>{title} — {siteName}</title>
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-white text-gray-900 antialiased">
    <header class="border-b border-gray-200">
      <nav class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between">
        <a href="/" class="font-bold text-xl">{siteName}</a>
        <ul class="flex gap-6">
          {navigation?.items?.map(item => (
            <li>
              <a href={item.href} class="text-gray-600 hover:text-gray-900 transition-colors">
                {item.label}
              </a>
            </li>
          ))}
        </ul>
      </nav>
    </header>
    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>
    <footer class="border-t border-gray-200 mt-16">
      <div class="max-w-6xl mx-auto px-4 py-8 text-center text-gray-500 text-sm">
        © {new Date().getFullYear()} {siteName}
      </div>
    </footer>
  </body>
</html>