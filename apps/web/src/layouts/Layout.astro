---
import "../styles/global.css";
import Header from "@raveo/ui/components/layout/Header.astro";
import Footer from "@raveo/ui/components/layout/Footer.astro";

interface Props {
  title: string;
  description?: string;
  noIndex?: boolean;
  schema?: Record<string, unknown> | Record<string, unknown>[];
  canonical?: string;
}

const { title, description, noIndex, schema, canonical } = Astro.props;
const { navigation, siteSettings } = Astro.locals;

const siteName = siteSettings?.siteName ?? "Raveo";
const siteDescription = description ?? siteSettings?.siteDescription ?? "";
const canonicalUrl = canonical ?? Astro.url.href;
---

<!doctype html>
<html lang="cs">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={siteDescription} />
    <title>{title} â€” {siteName}</title>
    <link rel="canonical" href={canonicalUrl} />
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="min-h-screen bg-(--color-background) text-(--color-foreground) antialiased">
    <Header siteName={siteName} items={navigation?.items ?? []} />

    <main class="max-w-6xl mx-auto px-4 py-8">
      <slot />
    </main>

    <Footer siteName={siteName} />
  </body>
</html>