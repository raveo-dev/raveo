---
interface Props {
    src: string;
    alt: string;
    width?: number;
    height?: number;
    class?: string;
    sizes?: string;
    loading?: "lazy" | "eager";
    cover?: boolean;
}

const {
    src,
    alt,
    width,
    height,
    class: className,
    sizes,
    loading = "lazy",
    cover = false,
} = Astro.props;

const coverClass = cover ? "object-cover w-full h-full" : "";
const classes = [coverClass, className].filter(Boolean).join(" ") || undefined;
---

<img
    src={src}
    alt={alt}
    width={width}
    height={height}
    class={classes}
    sizes={sizes}
    loading={loading}
    decoding="async"
/>
