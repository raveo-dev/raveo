{
  "name": "raveo",
  "version": "0.0.1",
  "private": true,
  "packageManager": "pnpm@10.30.3",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "deploy": "turbo deploy",
    "deploy:cms": "turbo deploy --filter @raveo/cms",
    "deploy:web": "turbo deploy --filter @raveo/web",
    "deploy:preview": "turbo deploy:preview",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "generate:types": "turbo generate:types",
    "typecheck": "turbo typecheck"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.4.4",
    "turbo": "^2.8.11"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp",
      "esbuild",
      "unrs-resolver",
      "workerd"
    ]
  }
}