---
export interface Props {
  as?: "div" | "section" | "main" | "article";
  size?: "sm" | "md" | "lg" | "full";
  class?: string;
}

const {
  as: Tag = "div",
  size = "lg",
  class: className = "",
} = Astro.props;

const sizes: Record<string, string> = {
  sm: "max-w-2xl",
  md: "max-w-4xl",
  lg: "max-w-6xl",
  full: "max-w-full",
};

const classes = ["mx-auto w-full px-4", sizes[size], className]
  .filter(Boolean)
  .join(" ");
---

<Tag class={classes}>
  <slot />
</Tag>